html,
body {
  font-family: 'Helvetica';
  font-size: 10px;
  page-break-inside: auto;
  color: black;
  margin: 0;
  padding: 0px 0 10px;
}

h4 {
  font-size: 14pt;
}

table.invisible {
  margin: 0;
  width: 100%;
}

table.report {
  border-spacing: 0;
  font-size: 8pt;
  margin:  0;
  padding: 0;
  width: 100%;

  tr {
    margin: 0;
    padding: 0;
    td, th {
      border: 1px solid black;
      font-size: 8pt;
      margin: 0;
      padding: 1px;
    }
  }
}

.align-left {
  text-align: left;
}

.align-right {
  text-align: right;
}

.nospacing {
  margin: 0;
  padding: 0;
}

.pad-top-20 {
  padding-top: 20px;
}
